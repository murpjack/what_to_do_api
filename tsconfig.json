{
    "compilerOptions": {
        "target": "es2020",
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "dist",
        "lib": ["dom", "es2018"],
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowJs": true,
        "paths": {
            "src/*": ["./src/*"]
        }
    },
    "exclude": [
      "node_modules",
      "lib",
      // "./src/_test_/**/*",
      "dist",
      "types.ts",
      "src/types/"
    ]
}
